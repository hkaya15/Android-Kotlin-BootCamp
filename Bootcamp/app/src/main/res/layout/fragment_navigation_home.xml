<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigationHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".NavigationHomeFragment">


    <ImageView
        android:id="@+id/dogPhoto"
        android:layout_width="229dp"
        android:layout_height="336dp"
        android:layout_gravity="center"
        android:src="@drawable/dog"
        app:layout_constraintBottom_toTopOf="@+id/detaay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/detaay"
        android:layout_width="144dp"
        android:layout_height="72dp"
        android:elevation="20dp"
        android:stateListAnimator="@null"
        android:text="@string/detay"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dogPhoto"
        app:layout_constraintStart_toStartOf="@+id/dogPhoto"
        app:layout_constraintTop_toBottomOf="@+id/dogPhoto" />

    <TextView
        android:id="@+id/HeadName"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="NUGGET"
        app:layout_constraintBottom_toTopOf="@+id/dogPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />
</androidx.constraintlayout.widget.ConstraintLayout>